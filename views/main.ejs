<!DOCTYPE html>

<head>
    <title>

    </title>
</head>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<style>
 body
 {

     background-color:lightgreen;
     font-family: "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"
 }   
.Board{
 
    margin: 100px;
    text-align: center;
    
    
    }
#boardbutton{
    background-color: lightskyblue;
    
}

#task{
    height:20px;
}

ul{
    list-style-type: none;
}
</style>





<body>
   
    <div class="Board">
        <form action="/" method="POST">
            <h1 style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"> To do list</h1> 
            <input type="text" id="task" name="task" placeholder="Task"> 
        <button type="submit" id="boardbutton" ><i class="fa fa-plus"></i> </button>       
    </form>

    <ul class="todo-list">
        <% toDoTasks.forEach(async function(details) { %>


        <li class="todo-list-item">
        <div class="todo-list-item-name"><%= details.task %></div>
      
    
        <a href="/remove/<%= details._id %>" class="remove"> <span class="fa fa-times"></span> </a>
        </li>
        <% }) %>
        </ul>
     


    </div>
</body>